<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <layer-list>
            <item android:left="7dp" android:top="7dp">
                <shape>
                    <solid android:color="#2a0d39" />
                    <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="5dp" android:top="5dp">
                <shape>
                    <solid android:color="#66000000" />
                    <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="7dp" android:right="7dp">
                <shape android:shape="rectangle">
                    <solid android:color="#d9d9d9"/>
                    <!--corners allow us to make the rounded corners button-->
                    <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>