<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <layer-list>
            <item android:right="10dp" android:top="10dp">
                <shape>
                    <solid android:color="#2a0d39" />
                    <corners android:topLeftRadius="35dp" android:topRightRadius="0dp" android:bottomLeftRadius="35dp" android:bottomRightRadius="0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:right="6dp" android:top="6dp">
                <shape>
                    <solid android:color="#66000000" />
                    <corners android:topLeftRadius="35dp" android:topRightRadius="0dp" android:bottomLeftRadius="35dp" android:bottomRightRadius="0dp"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="10dp" android:left="10dp">
                <shape android:shape="rectangle">
                    <solid android:color="#d9d9d9"/>
                    <!--corners allow us to make the rounded corners button-->
                    <corners android:topLeftRadius="35dp" android:topRightRadius="0dp" android:bottomLeftRadius="35dp" android:bottomRightRadius="0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>