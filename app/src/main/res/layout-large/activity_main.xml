<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="redhill.myapplication.MainActivity"
    android:layout_gravity="center"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="66dp"
                android:layout_height="77dp"
                android:id="@+id/logo"
                android:background="@drawable/logo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:contentDescription=""
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:text="@string/MainActivity_prime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#d9d9d9"
                android:textSize="33sp"
                android:id="@+id/textView2"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:text="@string/MainActivity_with"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#d9d9d9"
                android:textSize="27sp"
                android:id="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTitle"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="42sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:id="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"/>

            <view
                class="com.google.android.youtube.player.YouTubePlayerView"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView1"
                android:background="#00000000"
                android:layout_marginTop="30dp"
                android:id="@+id/imageView"
                android:layout_gravity="center"
                android:gravity="center"/>

            <CheckBox
                android:text="@string/MainActivity_checkBox"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/imageView"
                android:id="@+id/checkBox"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp" />

            <CheckBox
                android:text="@string/MainActivity_checkBoxFav"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="17dp"
                android:id="@+id/checkBoxFav"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="17dp"
                android:layout_marginEnd="17dp" />

            <Button
                android:text="@string/MainActivity_buttonTrailer"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:textSize="30sp"
                android:background="@drawable/buttonbg_large"
                android:textColor="@drawable/buttontextcolor"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/checkBox"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="30dp"
                android:id="@+id/button2"
                android:layout_gravity="center"
                android:gravity="center"/>

            <Button
                android:text="@string/MainActivity_buttonRefresh"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:textSize="30sp"
                android:background="@drawable/buttonbg_l_large"
                android:textColor="@drawable/buttontextcolor"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/checkBox"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="30dp"
                android:id="@+id/button_refresh"
                android:layout_gravity="center"
                android:gravity="center"/>



        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
