<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="redhill.myapplication">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".EnteringActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GenreActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="redhill.myapplication.GenreActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".YearSelectingTest" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="redhill.myapplication.YearSelectingTest" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="redhill.myapplication.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Main2Activity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="redhill.myapplication.Main2Activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Main3Activity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="redhill.myapplication.Main3Activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".DisabledMovies" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="redhill.myapplication.DisabledMovies" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".SplashScreen" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="redhill.myapplication.SplashScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Splash2Screen" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="redhill.myapplication.Splash2Screen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".PopUp" android:screenOrientation="portrait" android:theme="@style/AppTheme.CustomTheme">
            <intent-filter>
                <action android:name="redhill.myapplication.PopUp" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".FavouriteMovies" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="redhill.myapplication.FavouriteMovies" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!--Include the AdActivity configChanges and theme.
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        -->

    </application>

</manifest>